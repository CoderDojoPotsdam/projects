/*object-oriented program*/void main() {
    int schritte = 0;
    DrehHamster paul = new DrehHamster();
    paul.init(1, 0, Hamster.OST, 0);

    while (paul.vornFrei()) {
      paul.vor();
      schritte = schritte + 1;
    }

    paul.kehrt();

    while (schritte > 0) {
      paul.vor();
      schritte = schritte - 1;
    }
}