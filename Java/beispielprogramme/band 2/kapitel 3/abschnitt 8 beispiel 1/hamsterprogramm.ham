/*object-oriented program*/void main() {
    // ein Hamster namens paul wird erzeugt und initialisiert
    Hamster paul = new Hamster();
    paul.init(0, 0, Hamster.OST, 0);

    // paul erledigt seine Arbeit
    if (paul.kornDa()) {
        paul.nimm();
    }
    while (paul.vornFrei()) {
        paul.vor();
        if (paul.kornDa()) {
            paul.nimm();
        }
    }
}